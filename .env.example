# PostGres Neon DB
DATABASE_URL="postgresql://user:password@localhost:5432/listmaker?schema=public"
DATABASE_URL_UNPOOLED="postgresql://user:password@localhost:5432/listmaker?schema=public"
PGUSER=user
PGPASSWORD=password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=listmaker
DB_USER=user
DB_PASSWORD=password
# set to false to disable SSL (server defaults to enable)
DB_SSL=true

NODE_ENV=development

# Clerk (web)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx
CLERK_PUBLISHABLE_KEY=pk_test_xxx
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# Clerk (expo)
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx

# Server
PORT=3001
# Comma-separated. Include Expo web dev server origin(s) too.
CORS_ORIGIN=http://localhost:3000,http://localhost:8081,http://localhost:19006
DISABLE_HELMET= # set to true to disable helmet (not recommended)

# Web BFF -> Server API
SERVER_API_URL=http://localhost:3001

# Native (Expo) -> Server API
# If you set only `EXPO_PUBLIC_SERVER_API_URL`, it will be used for all platforms (including web).
# Prefer the platform-specific vars below:
EXPO_PUBLIC_SERVER_API_URL_WEB=http://localhost:3001
# Android emulator typically needs 10.0.2.2 to reach your host machine.
EXPO_PUBLIC_SERVER_API_URL_ANDROID=http://10.0.2.2:3001

# Logging (optional; was used by standalone server)
JET_LOGGER_MODE=CONSOLE
JET_LOGGER_FILEPATH=jet-logger.log
JET_LOGGER_TIMESTAMP=TRUE
JET_LOGGER_FORMAT=LINE
