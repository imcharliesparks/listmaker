{
  "name": "listmaker-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:web:server": "turbo run dev --filter=server --filter=web",
    "dev:server": "turbo run dev --filter=server",
    "dev:native:server": "turbo run dev --filter=server --filter=native",
    "dev:native": "turbo run dev --filter=native",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "db:generate": "bunx prisma generate --schema packages/database/prisma/schema.prisma",
    "db:push": "bunx prisma db push --schema packages/database/prisma/schema.prisma",
    "db:migrate": "bunx prisma migrate dev --schema packages/database/prisma/schema.prisma",
    "db:migrate:deploy": "bunx prisma migrate deploy --schema packages/database/prisma/schema.prisma",
    "db:studio": "bunx prisma studio --schema packages/database/prisma/schema.prisma",
    "db:seed": "bunx prisma db seed --schema packages/database/prisma/schema.prisma",
    "db:reset": "bunx prisma migrate reset --schema packages/database/prisma/schema.prisma",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/react": "19.1.10",
    "@types/react-dom": "19.1.0",
    "turbo": "^2.3.3",
    "typescript": "^5.6.3"
  },
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.38"
}
